						<sourceSchema>se/1.1.0/FeatureStyle.xsd</sourceSchema>
						<sourceSchema>se/1.1.0/Symbolizer.xsd</sourceSchema>
						<sourceSchema>se/1.1.0/common.xsd</sourceSchema>
						
